<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92E53935"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하시오.안드로이드"
        android:textSize="12pt"
        android:textColor="#8100A6"
        android:background="#FFD300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText">
    </TextView>
    <!-- 부모기준에 맞춤 ConstraintLayout 일때 이렇게 해야함 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잘가시오.안드로이드"
        android:textSize="15pt"
        android:textColor="#3949AB"
        android:background="#43A047"
        app:layout_constraintTop_toBottomOf="@id/hi"
        app:layout_constraintLeft_toLeftOf="@id/hi"
        app:layout_constraintRight_toRightOf="@id/hi"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>