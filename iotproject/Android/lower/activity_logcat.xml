<?xml version="1.0" encoding="utf-8"?>
<!-- 메인메뉴에서 view -> tool windows -> logcat 에서 확인 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logcat">

    <TextView
        android:id="@+id/textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로고 캣"
        android:textSize="25dp"
        android:textColor="#0b2eef"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,SpUsage">
    </TextView>
    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼"
        app:layout_constraintTop_toBottomOf="@+id/textV"
        app:layout_constraintRight_toRightOf="@+id/textV"
        app:layout_constraintLeft_toLeftOf="@+id/textV"
        tools:ignore="HardcodedText">
    </Button>
    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/bt"
        app:layout_constraintRight_toRightOf="@+id/bt"
        app:layout_constraintTop_toBottomOf="@+id/bt"
        >
    </CheckBox>
</androidx.constraintlayout.widget.ConstraintLayout>